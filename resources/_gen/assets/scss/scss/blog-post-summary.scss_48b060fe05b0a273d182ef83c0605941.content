.blog-post-summary-container{margin-bottom:2rem}.blog-post-summary-container a{text-decoration:none;color:#fe7342;display:inline-block;transition:background-color 200ms}.blog-post-summary-container a:hover{transition:background-color 200ms;background-color:rgba(254,115,66,.2)}.blog-post-summary-container a.read-more{font-family:Menlo,Monaco,Consolas,liberation mono,courier new,monospace}.blog-post-summary-container h2{font-size:2rem;text-transform:lowercase;color:#fe7342;font-family:Menlo,Monaco,Consolas,liberation mono,courier new,monospace;letter-spacing:-1px;margin:0}.blog-post-summary-container h3{text-transform:lowercase;color:#2d3748;margin:0}.blog-post-summary-container p{margin:0}.blog-post-summary-container p.summary{margin-top:1rem;max-width:600px}.blog-post-summary-container span{font-size:.8rem;color:#2d3748;text-transform:lowercase}