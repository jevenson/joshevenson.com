.main-container{display:flex;flex-direction:column;align-items:flex-start;justify-content:center}@media(max-width:800px){.main-container{align-items:flex-start}}.introduction h1{color:#2d3748;margin:0;font-weight:initial;text-transform:lowercase;font-size:4vw}@media(max-width:800px){.introduction h1{font-size:7vw}}@media(min-width:1600px){.introduction h1{font-size:65px}}.introduction h1 strong{color:#fe7342}.experience{list-style-type:none;margin:2rem 0 0;padding:0;width:100%}.experience li{display:flex;align-items:center}.experience li:not(:last-child){margin-bottom:2rem}.experience img{width:5vw;height:auto;margin-right:1rem}@media(max-width:800px){.experience img{width:15vw;margin-right:1rem}}.experience h3{text-transform:lowercase;color:#191f29;font-family:Menlo,Monaco,Consolas,liberation mono,courier new,monospace;font-size:1.5vw}@media(max-width:800px){.experience h3{font-size:3vw}}@media(min-width:1600px){.experience h3{font-size:24px}}.experience h3 span{display:block}.experience a{text-transform:lowercase;font-size:2vw;letter-spacing:-2px;position:relative;text-decoration:none}@media(max-width:800px){.experience a{font-size:4vw}}@media(min-width:1600px){.experience a{font-size:30px}}.experience li a::before{content:'';position:absolute;top:50%;left:-1%;right:-1%;bottom:0;transition:top 200ms}.experience li a:hover::before{top:0;transition:top 200ms}.experience li a.bhtp{color:#364f78}.experience li a.bhtp::before{background-color:rgba(54,79,120,.2)}.experience li a.cenwidev{color:#7561a9}.experience li a.cenwidev::before{background-color:rgba(117,97,169,.2)}.experience li a.cwitc{color:#ec2f4b}.experience li a.cwitc::before{background-color:rgba(236,47,75,.2)}