.project-summary-container{display:flex;margin-bottom:2rem}@media(max-width:800px){.project-summary-container{flex-direction:column}}.project-summary-container .project-title{color:#222;text-decoration:none}.project-summary-container .project-title h2{margin:0;color:#2d3748;text-transform:lowercase}.project-summary-container .project-link{font-size:1rem;color:#2d3748;text-transform:lowercase}.project-summary-container .image-container{width:25%;flex-shrink:0;border:5px solid #222;margin-right:2rem;position:relative}.project-summary-container .image-container .image-container-again{position:absolute;top:0;bottom:0;left:0;right:0}.project-summary-container .image-container img{object-fit:cover;object-position:50% 0;height:100%;width:100%}.project-summary-container a{text-decoration:none;color:#fe7342;transition:background-color 200ms}.project-summary-container a:hover{transition:background-color 200ms;background-color:rgba(254,115,66,.2)}.project-summary-container a.read-more{margin:0;font-family:Menlo,Monaco,Consolas,liberation mono,courier new,monospace;text-transform:lowercase}