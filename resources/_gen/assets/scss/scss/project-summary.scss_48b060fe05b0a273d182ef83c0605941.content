.project-summary-container{display:flex;margin-bottom:2rem;flex-direction:column;align-items:flex-start}.project-summary-container .project-title{color:#222;text-decoration:none}.project-summary-container .project-title h2{margin:0;color:#2d3748;text-transform:lowercase}.project-summary-container .project-link{font-size:1rem;color:#2d3748;text-transform:lowercase}.project-summary-container .image-container{border:5px solid #191f29;width:60%}@media(max-width:800px){.project-summary-container .image-container{width:100%}}.project-summary-container .image-container img{width:100%;height:auto;vertical-align:middle}.project-summary-container .description-container{margin:1rem 0 2rem}.project-summary-container .description-container p{width:75%;margin-bottom:0}.project-summary-container a{text-decoration:none;color:#fe7342;transition:background-color 200ms}.project-summary-container a:hover{transition:background-color 200ms;background-color:rgba(254,115,66,.2)}.project-summary-container a.read-more{margin:0;font-family:Menlo,Monaco,Consolas,liberation mono,courier new,monospace;text-transform:lowercase}