.hero-container{margin-bottom:3rem;display:flex;align-items:center;justify-content:space-around;flex-direction:column}@media(min-width:700px){.hero-container{flex-direction:row}}.hero-container .portrait{height:20vw;width:20vw;max-height:200px;max-width:200px;min-height:100px;min-width:100px;border-radius:50%}.hero-container .tagline{text-align:center;margin:0}header{width:100%;color:#ff7400;padding:25px 0;display:flex;align-items:center;justify-content:center}header .container{display:flex;align-items:center;flex-direction:column;justify-content:center}header .container .site-title{flex-grow:1}header .container h1{margin:0 0 10px;color:#ff7400}@media(min-width:700px){header .container h1{margin:0}}header nav{width:50%;max-width:350px;display:flex;justify-content:space-around}header nav a{text-decoration:none;color:#00f;font-size:1.2em}header nav a:hover{text-decoration:underline}.colored-text{color:#ff7400;display:inline-block}*{font-family:courier new,Courier,monospace}body{margin:0;padding:0;background-color:#f5f5f5;border-top:10px solid #ff7400;display:flex;flex-direction:column;justify-content:center;align-items:center}body .container{max-width:800px;width:calc(100% - 50px);margin:0 25px}a{text-decoration:none}a:visited{color:#00f}