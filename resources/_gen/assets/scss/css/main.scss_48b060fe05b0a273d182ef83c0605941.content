.hero-container{margin-bottom:3rem;display:flex;align-items:center;justify-content:space-around;flex-direction:column}@media(min-width:700px){.hero-container{flex-direction:row}}.hero-container .tagline{text-align:center;margin:0}header{width:100%;color:#e36c0a;background-color:#e36c0a;padding:10px 0;display:flex;align-items:center;justify-content:center}header .container{display:flex;align-items:center;justify-content:space-between}header nav{display:flex;flex-direction:column}header nav h1{text-decoration:none;font-weight:700;color:#f5f5f5;font-size:2.5em;margin:0 0 10px}header nav .nav-items{list-style:none;padding:0;margin:0;display:flex}header nav .nav-items li{margin-right:25px}header nav .nav-items li a{text-decoration:none;font-weight:700;color:#f5f5f5;font-size:1.3em}header nav .nav-items li a:hover{text-decoration:underline}header .portrait-container{position:relative}header .portrait-container::before{content:"";position:absolute;top:0;left:0;width:100%;height:100%;background-color:#e36c0a;opacity:.1;border-radius:50%;height:150px;width:150px}header .portrait-container .portrait{border-radius:50%;height:150px;width:150px}.colored-text{color:#e36c0a;display:inline-block}*{font-family:courier new,Courier,monospace}body{margin:0;padding:0;background-color:#f5f5f5;border-top:10px solid #f8a25b;display:flex;flex-direction:column;justify-content:center;align-items:center}body .container{max-width:800px;width:calc(100% - 50px);margin:0 25px}a{text-decoration:none}a:visited{color:#00f}